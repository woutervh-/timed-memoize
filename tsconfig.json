{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "umd",
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declarationDir": "lib",
      "outDir": "lib",
      "noImplicitAny": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src"
    ]
  }
  